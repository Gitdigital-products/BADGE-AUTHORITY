name: Extract ZIP Files

on:
  workflow_dispatch:
  push:
    paths:
      - "**/*.zip"

jobs:
  unzip: search 
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install unzip
        run: sudo apt-get update && sudo apt-get install -y unzip

      - name: Find and extract all ZIP files
        run: |
          echo "Searching for ZIP files..."
          find . -type f -name "*.zip" | while read zipfile; do
            echo "Extracting: $zipfile"
            dirname=$(dirname "$zipfile")
            unzip -o "$zipfile" -d "$dirname"
          done

      - name: Commit extracted files (optional)
        if: github.event_name == 'workflow_dispatch'
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          git add .
          git commit -m "Auto-extracted ZIP files" || echo "No changes to commit"
          git push
